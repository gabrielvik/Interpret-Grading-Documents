@model List<Interpret_grading_documents.Services.GPTService.GraduationDocument>

<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-4">Uploaded Grading Documents</h1>

        <div class="mt-3" id="contentSection">
            @if (Model != null && Model.Any())
            {
                <table class="table table-striped table-bordered table-hover">
                    <thead class="table-light">
                    <tr>
                        <th scope="col">Document Name</th>
                        <th scope="col" class="text-center">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var document in Model)
                    {
                        <tr>
                            <td>@document.DocumentName</td>
                            <td class="text-center">
                                <a asp-action="ViewDocument" asp-route-id="@document.Id" asp-controller="Home" class="btn btn-primary btn-sm me-2">View</a>
                            
                                <!-- Remove Button Form -->
                                <form asp-action="RemoveDocument" method="post" style="display: inline;">
                                    <input type="hidden" name="id" value="@document.Id" />
                                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to remove this document?');">Remove</button>
                                </form>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info mt-4" role="alert">
                    No documents have been analyzed yet. Please upload documents on the <a asp-action="Index" asp-controller="Home">Upload Documents</a> page.
                </div>
            }
        </div>

        <div class="mt-4">
            <a asp-action="Index" asp-controller="Home" class="btn btn-primary">Upload More Documents</a>
        </div>
    </div>
</div>
