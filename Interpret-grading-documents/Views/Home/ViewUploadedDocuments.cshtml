<div class="container mt-5">
    <div class="text-center">
        @if (Model != null && Model.Count > 0)
        {
            <h1 class="display-4">Uploaded Documents of @ViewBag.UserName</h1>

            <div class="mt-3" id="contentSection">
                <table class="table table-striped table-bordered table-hover">
                    <thead class="table-light">
                        <tr>
                            <th scope="col">Document Name</th>
                            <th scope="col" class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var document in Model)
                        {
                            <tr>
                                <td>@document.DocumentName</td>
                                <td class="text-center">
                                    <a asp-action="ViewDocument" asp-route-id="@document.Id" asp-controller="Home" class="btn btn-primary btn-sm me-2">View</a>

                                    <!-- Remove Button Form -->
                                    <form asp-action="RemoveDocument" method="post" style="display: inline;">
                                        <input type="hidden" name="id" value="@document.Id" />
                                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to remove this document?');">Remove</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (ViewBag.ExamStatus != null)
            {
                <div class="mt-4 text-center">
                    <div class="card d-inline-block w-50">
                        <div class="card-header bg-primary text-white">
                            Exam Status
                        </div>
                        <div class="card-body">
                            <p class="card-text">@ViewBag.ExamStatus</p>
                        </div>
                    </div>
                </div>
            }
            <div class="mt-4 text-center">
                <table class="table table-bordered">
                    <thead style="background-color: #007bff; color: white;">
                        <tr>
                            <th>Course Name</th>
                            <th>Required Grade</th>
                            <th>Student's Grade</th>
                            <th>Meets Requirement</th>
                            <th>Notes</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var document in Model)
                        {
                            var jsonFilePath = ViewBag.JsonFilePath;
                            var requirementResults = Interpret_grading_documents.Services.RequirementChecker.DoesStudentMeetRequirement(document, jsonFilePath);
                            
                            @foreach (var kvp in requirementResults)
                            {
                                var result = kvp.Value;
                                <tr>
                                    <td>@result.CourseName</td>
                                    <td>@result.RequiredGrade</td>
                                    <td>@result.StudentGrade</td>
                                    <td>
                                        @if (result.IsMet)
                                        {
                                            <span class="text-success">Yes</span>
                                        }
                                        else
                                        {
                                            <span class="text-danger">No</span>
                                        }
                                    </td>
                                    <td>
                                        @if (result.CourseName != kvp.Key)
                                        {
                                            <span>
                                                The student has a grade of @result.StudentGrade on @result.CourseName, but has the following grades on other courses:
                                                <ul>
                                                    @if (result.OriginalCourseGrade != "N/A")
                                                    {
                                                        <li>@kvp.Key: @result.OriginalCourseGrade</li>
                                                    }
                                                    @foreach (var grade in result.OtherGradesInAlternatives)
                                                    {
                                                        @if (!grade.Contains(@result.CourseName))
                                                        {
                                                            <li>@grade</li>
                                                        }
                                                    }
                                                </ul>
                                            </span>
                                        }
                                        else
                                        {
                                            @if (result.OtherGradesInAlternatives != null && result.OtherGradesInAlternatives.Count > 0)
                                            {
                                                <span>The student also has the following grades on alternative courses:</span>
                                                <ul>
                                                    @foreach (var grade in result.OtherGradesInAlternatives)
                                                    {
                                                        <li>@grade</li>
                                                    }
                                                </ul>
                                            }
                                        }
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info mt-4" role="alert">
                No documents have been analyzed yet. Please upload documents on the <a asp-action="Index" asp-controller="Home">Upload Documents</a> page.
            </div>
        }

        <div class="mt-4">
            <a asp-action="Index" asp-controller="Home" class="btn btn-primary">Upload More Documents</a>
        </div>
    </div>
</div>
